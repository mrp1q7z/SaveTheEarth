    <string name="ending_message_01">ありがとう</string>
    <string name="ending_message_02">私（地球）が誕生してから４５億年</string>
    <string name="ending_message_03">炎に包まれていたときもあった</string>
    <string name="ending_message_04">氷に閉ざされていた時もあった</string>
    <string name="ending_message_05">緑に覆われ巨大な生物がいた時もあった</string>
    <string name="ending_message_06">人間という変な生物が出てきた</string>
    <string name="ending_message_07">文明という（彼らに言わせれば）ご自慢のものを作った</string>
    <string name="ending_message_08">彼らの欲望は果てしなく大地を掘り起こし</string>
    <string name="ending_message_09">緑も奪った</string>
    <string name="ending_message_10">そして、赤茶けた大地になって誰もいなくなった</string>
    <string name="ending_message_11">が、あなたの力によって緑が復活した</string>
    <string name="ending_message_12">これで生物も生まれてくるだろう</string>
    <string name="ending_message_13">１万年後、「超人類」が生まれた</string>
    <string name="ending_message_14">終わり</string>

